@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Quicksand:wght@400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* ============================================
       PALETTE NATURE FRESH (moderne, durable)
       ============================================ */

    /* Primary - Emerald Green */
    --primary: 158 64% 52%;
    --primary-foreground: 0 0% 100%;
    --primary-light: 158 60% 65%;
    --primary-dark: 158 68% 40%;

    /* Secondary - Bright Orange */
    --secondary: 35 90% 60%;
    --secondary-foreground: 0 0% 100%;
    --secondary-light: 35 85% 75%;

    /* Accent - Soft Purple */
    --accent: 265 75% 65%;
    --accent-foreground: 0 0% 100%;

    /* Backgrounds */
    --background: 40 30% 97%;
    --foreground: 220 25% 20%;

    /* Cards */
    --card: 40 40% 99%;
    --card-foreground: 220 25% 20%;

    /* Muted (gris nature doux) */
    --muted: 150 15% 92%;
    --muted-foreground: 220 15% 45%;

    /* Dangerous */
    --destructive: 0 65% 55%;
    --destructive-foreground: 0 0% 100%;

    /* Borders / inputs */
    --border: 150 20% 85%;
    --input: 150 20% 90%;
    --ring: 158 64% 52%;

    --radius: 1rem;

    /* Popover */
    --popover: 40 40% 99%;
    --popover-foreground: 220 25% 20%;

    /* Sidebar */
    --sidebar-background: 152 25% 95%;
    --sidebar-foreground: 220 25% 20%;
    --sidebar-primary: 158 64% 52%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 152 20% 90%;
    --sidebar-accent-foreground: 220 25% 20%;
    --sidebar-border: 150 20% 85%;
    --sidebar-ring: 158 64% 52%;
  }

  /* ============================================
     MODE SOMBRE
     ============================================ */
  .dark {
    --background: 220 20% 12%;
    --foreground: 40 20% 95%;

    --card: 220 20% 15%;
    --card-foreground: 40 20% 95%;

    --muted: 220 15% 20%;
    --muted-foreground: 220 15% 70%;

    --border: 220 15% 25%;
    --input: 220 15% 22%;

    /* Couleurs cohérentes */
    --primary: 158 55% 55%;
    --secondary: 35 90% 60%;
    --accent: 265 75% 70%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground font-body antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-heading font-bold;
  }
}

@layer utilities {

  .bg-village-sky {
    background: linear-gradient(180deg,
        hsl(200 80% 85%) 0%,
        hsl(200 70% 92%) 100%);
  }

  .bg-hero-gradient {
    background: linear-gradient(135deg,
        hsl(var(--primary)) 0%,
        hsl(var(--primary-light)) 40%,
        hsl(200 75% 55%) 100%);
  }

  .bg-bigtech-gradient {
    background: linear-gradient(135deg,
        hsl(250 30% 20%) 0%,
        hsl(250 30% 10%) 100%);
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-gauge {
    animation: gauge-fill 1s ease-out forwards;
  }

  .animate-bounce-in {
    animation: bounce-in 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .animate-slide-up {
    animation: slide-up 0.4s ease-out;
  }

  .animate-fade-in {
    animation: fade-in 0.3s ease-out;
  }
}

/* Animations */
@keyframes float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10px);
  }
}

@keyframes gauge-fill {
  from {
    width: 0%;
  }
}

@keyframes bounce-in {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }

  50% {
    transform: scale(1.05);
  }

  70% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes slide-up {
  from {
    transform: translateY(20px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: hsl(var(--muted));
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--primary) / 0.5);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--primary) / 0.7);
}

/* ACCESSIBILITY MODE */
.font-dyslexic {
  font-family: 'Verdana', 'Arial', sans-serif !important;
  letter-spacing: .02em;
  line-height: 1.5;
  word-spacing: .04em;
  overflow-wrap: break-word;
}

/* HIGH CONTRAST MODE */
.high-contrast {
  --background: 210 40% 98%;
  --foreground: 222 47% 17%;

  --card: 0 0% 100%;
  --card-foreground: 222 47% 17%;

  /* Bleu pro */
  --primary: 217 91% 60%;
  --primary-foreground: 0 0% 100%;

  /* Orange reste cohérent */
  --secondary: 35 90% 55%;
  --secondary-foreground: 0 0% 100%;

  /* Violet plus lisible */
  --accent: 265 75% 65%;
  --accent-foreground: 0 0% 100%;

  --muted: 210 40% 96%;
  --muted-foreground: 215 16% 47%;

  --border: 214 32% 91%;
  --destructive: 0 84% 60%;
  --destructive-foreground: 0 0% 100%;
}

.high-contrast button,
.high-contrast a {
  font-weight: 600 !important;
}

.high-contrast :focus-visible {
  outline: 3px solid hsl(var(--primary)) !important;
  outline-offset: 2px !important;
}

/* Text sizes */
.text-size-large {
  font-size: 110%;
}

.text-size-xl {
  font-size: 125%;
}

/* Screen reader */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Focus */
:focus-visible {
  outline: 3px solid hsl(var(--primary));
  outline-offset: 2px;
}